<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_one_player_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="3"
    tools:context="eii.ulpgc.es.fragmentdices.OnePlayerGameActivity">


    <fragment
        android:id="@+id/playersOPFragment"
        android:name="eii.ulpgc.es.fragmentdices.fragments.PlayersOnePlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        tools:layout="@layout/fragment_players_one_player" />

    <fragment
        android:id="@+id/diceFragment"
        android:name="eii.ulpgc.es.fragmentdices.fragments.DiceOnePlayerFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="1"
        tools:layout="@layout/fragment_dice" />

    <fragment
        android:id="@+id/panelOPFragment"
        android:name="eii.ulpgc.es.fragmentdices.fragments.PanelOnePlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        tools:layout="@layout/fragment_panel_one_player"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
</GridLayout>
